
<%- include("partials/header.ejs") %>
<% if (loginClicked){%>
    <%- include("loginform.ejs") %>
    
<%} %>
<div class="container">
    <h1 class="siteTitle"><span>Crafted </span>Steps</h1>

    <p><%=today %></p><br>
    <h2 id="recent">Recent posts</h2><br>
    <div class="subcontainer">
        <% posts.forEach(post => { %>
        <div class="post-card">
        <h2><%= post.title %></h2>
        <p><strong>By:</strong> <%= post.authorName %></p>
        <p><%= post.content.substring(0, 200) %>...</p>
        <p><small>Email: <%= post.emails || 'N/A' %></small></p>
        <a href="/posts/<%= post.id %>">Read More</a>
    </div>
    <% }) %>
    </div>
    <br>
    
</div>
<script>
document.getElementById("show-login").addEventListener('click',function(){
    const loginBox=document.getElementById("log");
    loginBox.style.display=(loginBox.style.display==='none' ||loginBox.style.display==='')?'block':'none';
})
</script>

